<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".add0_activity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textNoSuggestions"
        android:ems="12"
        android:hint=" Name"
        android:id="@+id/nameTxt"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:backgroundTint="#e3dfdf"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RingText"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/ringtone"
        android:textStyle="italic"
        android:layout_below="@id/nameTxt"
        />

    <SeekBar
        android:id="@+id/ring_seek"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/RingText"
        android:progress="20"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MediaText"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/ring_seek"
        android:textStyle="italic"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Media"
        />

    <SeekBar
        android:id="@+id/Media_seek"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/MediaText"
        android:layout_alignParentLeft="true"
        android:progress="20"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notif_txt"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:textStyle="italic"
        android:layout_below="@id/Media_seek"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/notification"
        />
    <SeekBar
        android:id="@+id/notif_seek"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/notif_txt"
        android:layout_alignParentLeft="true"
        android:progress="20"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sys_txt"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:textStyle="italic"
        android:layout_below="@id/notif_seek"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/system"
        />
    <SeekBar
        android:id="@+id/sys_seek"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/sys_txt"
        android:layout_alignParentLeft="true"
        android:progress="20"
        />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_fw"
        android:clickable="true"
        android:onClick="add1_method"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        app:backgroundTint="@color/colorPrimaryDark" />
    <Switch
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Vibration"
        android:id="@+id/switch1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="21dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/nameTxt"
        />

</RelativeLayout>
